<div class="container">

	<div class="row">
		<div class="col-sm-6 col-md-6">
			<a href="/kts-admin/new-event" class="btn btn-primary">Create New
				Event</a>
		</div>
	</div>

	<div class="row">
		<div class="col-md-12 col-sm-12">
			<table class="table table-hover">
				<thead>
					<tr>
						<th scope="col">#</th>
						<th scope="col">Event Owner</th>
						<th scope="col">Event Name</th>
						<th scope="col">Date Of Creation</th>
					</tr>
				</thead>
				<tbody>
					<% for(let i=0; i < events.length ; i++){ %>

						<tr>
							<th scope="row">
								<a href="/kts-admin/event/<%= events[i]._id.toString() %> ">

									<%= i+1 %>
								</a>
							</th>
							<td>
								<%= events[i].owner %>
							</td>
							<td>
								<%= events[i].title %>
							</td>
							<td>
								<%= events[i].dateOfCreation %>
							</td>

						</tr>
						<% } %>

				</tbody>
			</table>
		</div>
	</div>

</div>