<div class="box">
	<h2 class="header_two">Insert Event Owner Account</h2>
	<div class="row">
		<div class="col-md-6 center-element">
			<form class="form-group" action="/kts-admin/new-event" method="post">
				<input type="text" class="form-control margin-element" name="username" required
					placeholder="Group Name" />
				<input type="text" class="form-control margin-element" name="password" placeholder="Password" required>
				<div class="col-md-12 display-flex-column">
					<button class="button" id="submitEventOwner">Submit</button>
					<a href="/kts-admin/home" class="button">Back</a>
				</div>
			</form>
		</div>
	</div>
</div>

